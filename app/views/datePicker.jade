div(ng-controller='DatePickerCtrl' style={'padding':'40px'} ng-cloak)
  md-content
    h4 Standard date-picker
    md-datepicker(ng-model='myDate' md-placeholder="Enter date")
    h4 Disabled date-picker
    md-datepicker(ng-model='myDate' md-placeholder="Enter date" disabled)
    h4 Date-picker with min date and max date
    md-datepicker(
      ng-model='myDate'
      md-placeholder="Enter date"
      md-min-date='minDate'
      md-max-date='maxDate'
    )
    h4 Only weekends are selectable
    md-datepicker(
      ng-model='myDate'
      md-placeholder="Enter date"
      md-date-filter='onlyWeekendsPredicate'
    )
    h4 Only weekends within given range are selectable
    md-datepicker(
      ng-model='myDate'
      md-placeholder="Enter date"
      md-min-date='minDate'
      md-max-date='maxDate'
      md-date-filter='onlyWeekendsPredicate'
    )
    h4 With ngMessages
    form(name='myForm')
      md-datepicker(
        name='dateField'
        ng-model='myDate'
        md-placeholder="Enter date"
        required
        md-min-date='minDate'
        md-max-date='maxDate'
        md-date-filter='onlyWeekendsPredicate'
      )
      .validation-messages(ng-messages='myForm.dateField.$error')
        div(ng-message='valid') The entered value is not a date
        div(ng-message='required') This date is required!
        div(ng-message='mindate') Date is too early!
        div(ng-message='maxdate') Date is too late!
        div(ng-message='filtered') Only weekends are allowed!
